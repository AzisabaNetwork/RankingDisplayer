{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>AzisabaNetwork/renovate-config"
  ],
  "configMigration": true,
  "minimumReleaseAge": "7 days",
  "timezone": "Asia/Tokyo",
  "schedule": [
    "every 1 hour after 06:00 and before 23:59"
  ],
  "automergeSchedule": [
    "every 1 hour after 06:00 and before 23:59 every day"
  ],
  "packageRules": [
    {
      "groupName": "auto-update-junit",
      "automerge": true,
      "matchPackageNames": [
        "org.junit:junit-bom"
      ]
    },
    {
      "groupName": "auto-update-plugins",
      "automerge": true,
      "matchPackageNames": [
        "com.gradleup.shadow",
        "xyz.jpenilla.run-paper"
      ]
    },
    {
      "groupName": "auto-update-external",
      "automerge": true,
      "matchPackageNames": [
        "de.exlll:configlib-yaml",
        "com.github.ben-manes.caffeine:caffeine",
        "org.jspecify:jspecify"
      ]
    },
    {
      "groupName": "auto-update-internal",
      "automerge": true,
      "matchPackageNames": [
        "com.github.AzisabaNetwork:KDStatusReloaded",
        "com.github.AzisabaNetwork:PlayerSettings"
      ]
    }
  ]
}
